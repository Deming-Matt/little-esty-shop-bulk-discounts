
<h1>Admin Merchant Index Page</h1>
<%= link_to "Create a New Merchant", "/admin/merchants/new" %>
<div id="top-5-merchants">
<h2>Top 5 Merchants by Total Revenue Generated:</h2>
  <% @merchants.top_five_merchants_by_revenue.each do |merchant| %>
      <%= link_to "#{merchant.name}", "/admin/merchants/#{merchant.id}" %>
      <p>Generated <%= merchant.total_revenue %> revenue</p>
  <% end %>
</div>

<div id="enabled-merchants">
  <h2>Enabled Merchants:</h2>
  <% @merchants.enabled_merchants.each do |merchant| %>
    <%= "#{merchant.name}" %>
    <% end %>
</div>
<div id="disabled-merchants">
  <h2>Disabled Merchants:</h2>
  <% @merchants.disabled_merchants.each do |merchant| %>
    <%= "#{merchant.name}" %>
    <% end %>
</div>

<h3>Merchant Names</h3>
<% @merchants.each do |merchant| %>
    <p><%= merchant.name %></p>
    <p><%= merchant.status %></p><hr>
<% end %>
