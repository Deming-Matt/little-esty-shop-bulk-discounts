<%= link_to "Items Index", "/merchants/:id/items" %>
<%= link_to "Invoices Index", "/merchants/:id/invoices" %><br>

<h2><%= @merchant.name %></h2>

<div id="ready-items">
    <h3>Items Ready to Ship</h3>
    <% @merchant.ready_items.each do |item| %>
        <p><%= "#{item.name}" %><%= link_to "#{item.find_invoice_id}", "/merchants/#{@merchant.id}/invoices/#{item.find_invoice_id}" %></p>
    <% end %>
</div>
