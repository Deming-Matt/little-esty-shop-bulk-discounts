<!DOCTYPE html>
<html>
  <head>
    <title>LittleEtsyShop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |type, message| %>
      <p><%= message %></p>
    <% end %>

<h4>Repo Name:</h4>
  <p><%= @repo.name %></p>
<h4>Repo Pull Request Total:</h4>
  <p><%= @pull_request_count %></p>
<h4>Contributors:</h4>
  <% @contributors.contributor_data.each do |contributor| %>
    <% if (contributor[:login] != "BrianZanti" &&
           contributor[:login] != "timomitchel" &&
           contributor[:login] != "scottalexandra" &&
           contributor[:login] != "jamisonordway") %>
    <p>Login: <%= contributor[:login] %></p>
    <p>Contributions: <%= contributor[:contributions] %></p>
    <% end %>
  <% end %>
    <%= yield %>


  </body>
</html>
